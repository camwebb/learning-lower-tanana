#!/bin/sh

cd /home/cam/public_html/learning-lower-tanana/md

if [ $# -eq 1 ]
then
    echo "  "${1/md/html}
    sed -E 's/\{([^,][^,][^,])([^,]*),([0-9.]+),([0-9.]+)\}/<a href="javascript:playSeg(\x27\1\2\x27,\3,\4);"><img src="img\/\1.png" height="15"\/><\/a>/g' $1 | \
    pandoc -s --template=template.html -o ../${1/md/html} -
    # check
    tidy -e ../${1/md/html} 2>&1 >/dev/null | grep errors
else
    for i in [A-Za-z0-9]*.md
    do
        echo "  "${i/md/html}
        sed -E 's/\{([^,][^,][^,])([^,]*),([0-9.]+),([0-9.]+)\}/<a href="javascript:playSeg(\x27\1\2\x27,\3,\4);"><img src="img\/\1.png" height="15"\/><\/a>/g' $i | \
        pandoc -s --template=template.html -o ../${i/md/html} -
    done
#    ../bin/checklinks
fi


